<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Professional Credentials Card</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <style>
      :root {
        --primary: #bf9e60;
        --primary-dark: #8e7443;
        --color-dark: #161616;
        --secondary: #00cec9;
        --dark: #2d3436;
        --light: #f7f9fc;
        --success: #00b894;
        --warning: #fdcb6e;
        --danger: #e17055;
        --nav-height: 80px;
      }

      .idp-card-wrapper {
        height: 100vh;
        z-index: 100;
        width: 100vw;
        background-color: rgba(0, 0, 0, 0.114);
        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);
        position: fixed;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .idp-card-container {
        perspective: 1000px;
        width: 400px;
        position: fixed;
        left: calc(50vw - 200px);
        top: 80px;
        z-index: 101;
      }

      .idp-card-container .credentials-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
        padding: 32px;
        position: relative;
        overflow: hidden;
        transform-style: preserve-3d;
        animation: cardAppear 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275)
          forwards;
        transform: translateY(30px) rotateX(5deg) scale(0.95);
        opacity: 0;
        border: 1px solid rgba(0, 0, 0, 0.05);
      }

      .idp-card-container .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        position: relative;
      }

      .idp-card-container .card-header::after {
        content: "";
        position: absolute;
        bottom: -5px;
        left: 0;
        width: 100%;
        height: 3px;
            background: linear-gradient(90deg, var(--primary), var(--secondary));
        border-radius: 2px;
      }

      .idp-card-container .card-title {
        font-size: 24px;
        font-weight: 700;
        color: var(--dark);
        display: flex;
        align-items: center;
        gap: 10px;
      }

      .idp-card-container .card-title i {
        background: linear-gradient(45deg, var(--primary), var(--primary-dark));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      .idp-card-container .close-btn {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: var(--light);
        border: none;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
        color: var(--dark);
        font-size: 18px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
      }

      .idp-card-container .close-btn:hover {
        background: var(--danger);
        color: white;
        transform: rotate(90deg) scale(1.1);
        box-shadow: 0 6px 15px rgba(225, 112, 85, 0.3);
      }

      .idp-card-container .credential-item {
        margin-bottom: 24px;
        animation: slideIn 0.5s ease-out forwards;
        animation-delay: 0.3s;
        opacity: 0;
        transform: translateX(-10px);
      }

      .idp-card-container .credential-item:nth-child(2) {
        animation-delay: 0.4s;
      }

      .idp-card-container .credential-label {
        display: block;
        font-size: 14px;
        color: var(--dark);
        margin-bottom: 8px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 8px;
      }

      .idp-card-container .credential-value {
        position: relative;
        display: flex;
      }

      .idp-card-container .credential-value input {
        width: 100%;
        padding: 14px 16px;
        border: 2px solid #e0e6ef;
        border-radius: 10px;
        font-size: 16px;
        background: var(--light);
        color: var(--dark);
        font-weight: 500;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        padding-right: 50px;
      }

      .idp-card-container .credential-value input:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 3px rgba(191, 158, 96, 0.2);
      }

      .idp-card-container .action-btn {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: var(--secondary);
        cursor: pointer;
        font-size: 18px;
        transition: all 0.2s ease;
      }

      .idp-card-container .action-btn:hover {
        color: var(--primary-dark);
        transform: translateY(-50%) scale(1.1);
      }

      .idp-card-container .card-footer {
        margin-top: 30px;
        display: flex;
        justify-content: space-between;
        animation: fadeIn 0.8s ease forwards;
        animation-delay: 0.6s;
        opacity: 0;
      }

      .idp-card-container .btn {
        padding: 14px 28px;
        margin-inline: 10px;
        border-radius: 10px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        border: none;
        display: flex;
        align-items: center;
        gap: 8px;
      }

      .idp-card-container .btn-primary {
        background: linear-gradient(45deg, var(--primary), var(--primary-dark));
        color: white;
        box-shadow: 0 6px 15px rgba(191, 158, 96, 0.3);
      }

      .idp-card-container .btn-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(191, 158, 96, 0.4);
      }

      .idp-card-container .btn-secondary {
        background: var(--light);
        color: var(--dark);
      }

      .idp-card-container .btn-secondary:hover {
        background: #e0e6ef;
      }

      .idp-card-container .card-decoration {
        position: absolute;
        top: 0;
        right: 0;
        width: 100px;
        height: 100px;
        background: linear-gradient(45deg, var(--primary), var(--secondary));
        clip-path: polygon(100% 0, 0% 100%, 100% 100%);
        opacity: 0.05;
      }

      .idp-card-container .security-badge {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        margin-top: 20px;
        padding: 12px;
        background: rgba(0, 206, 201, 0.08);
        border-radius: 10px;
        animation: fadeIn 0.8s ease forwards;
        animation-delay: 0.8s;
        opacity: 0;
      }

      .idp-card-container .security-badge i {
        color: var(--success);
        font-size: 20px;
        animation: pulse-idp 2s infinite;
      }

      .idp-card-container .security-badge span {
        color: var(--success);
        font-weight: 600;
        font-size: 14px;
      }

      /* Animations */
      @keyframes cardAppear {
        to {
          opacity: 1;
          transform: translateY(0) rotateX(0) scale(1);
        }
      }

      @keyframes slideIn {
        to {
          opacity: 1;
          transform: translateX(0);
        }
      }

      @keyframes fadeIn {
        to {
          opacity: 1;
        }
      }

      @keyframes pulse-idp {
        0% {
          transform: scale(1);
        }
        50% {
          transform: scale(1.1);
        }
        100% {
          transform: scale(1);
        }
      }

      .idp-card-container .watermark {
        position: absolute;
        bottom: 20px;
        right: 20px;
        font-size: 12px;
        color: rgba(0, 0, 0, 0.1);
        font-weight: 700;
      }
    </style>
  </head>
  <body>
    <div class="idp-card-wrapper" style="display: none"></div>
      <div class="idp-card-container" style="display: none">
        <div class="credentials-card">
          <div class="card-decoration"></div>

          <div class="card-header" style="background: transparent;">
            <h2 class="card-title">
              <i class="fas fa-key"></i> Access Room Info
            </h2>
            <button class="close-btn">
              <i class="fas fa-times"></i>
            </button>
          </div>

          <div class="credential-item">
            <label class="credential-label">
              <i class="fas fa-user"></i> ID
            </label>
            <div class="credential-value">
              <input type="text" value="admin_54872" readonly id="idInput" />
              <button class="action-btn copy-btn" title="Copy to clipboard">
                <i class="far fa-copy"></i>
              </button>
            </div>
          </div>

          <div class="credential-item">
            <label class="credential-label">
              <i class="fas fa-lock"></i> Password
            </label>
            <div class="credential-value">
              <input
                type="text"
                value="s3cur3P@ssw0rd"
                id="passwordInput"
                readonly
              />
              <button class="action-btn copy-btn" title="Copy to clipboard">
                <i class="far fa-copy"></i>
              </button>
            </div>
          </div>

          <div class="security-badge">
            <i class="fas fa-shield-alt"></i>
            <span>256-bit SSL Encrypted</span>
          </div>

          <div class="card-footer">
            <button class="btn btn-secondary">
              <i class="fas fa-download"></i> Details
            </button>
            <button class="btn btn-primary">
              <i class="fas fa-check"></i> Confirm
            </button>
          </div>

          <div class="watermark">SECURE ACCESS</div>
        </div>
      </div>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Close button functionality
        const closeBtn = document.querySelector(".close-btn");
        closeBtn.addEventListener("click", function () {
          const card = document.querySelector(".credentials-card");
          card.style.transform = "translateY(50px) rotateX(-15deg)";
          card.style.opacity = "0";

          // setTimeout(() => {
          //   alert("Card closed. Refresh page to see it again.");
          // }, 500);
        });

        // Copy to clipboard
        const copyBtns = document.querySelectorAll(".copy-btn");
        copyBtns.forEach((btn) => {
          btn.addEventListener("click", function () {
            const input = this.parentElement.querySelector("input");
            input.select();
            document.execCommand("copy");

            // Show feedback
            const originalTitle = this.getAttribute("title");
            this.innerHTML = '<i class="fas fa-check"></i>';
            this.style.color = "var(--success)";

            setTimeout(() => {
              this.innerHTML = '<i class="far fa-copy"></i>';
              this.style.color = "";
            }, 1500);
          });
        });

        // Button hover effects
        const buttons = document.querySelectorAll(".btn");
        buttons.forEach((btn) => {
          btn.addEventListener("mouseenter", function () {
            this.style.transform = "translateY(-3px)";
          });

          btn.addEventListener("mouseleave", function () {
            this.style.transform = "translateY(0)";
          });
        });
      });
    </script>
  </body>
</html>
