        }


        /* Main Content */
        .main-content {
            padding: 40px 0;
        }

        .page-title {
            text-align: center;
            margin-bottom: 40px;
            color: var(--color-dark);
            position: relative;
            padding-bottom: 15px;
        }

        .page-title:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 4px;
            background: var(--secondary);
            border-radius: 2px;
        }

        .tos-container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
            overflow: hidden;
        }

        .toc-sidebar {
            background: var(--light);
            padding: 25px;
            border-right: 1px solid #eee;
        }

        .toc-title {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 20px;
            color: var(--color-dark);
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .toc-list {
            list-style: none;
        }

        .toc-item {
            margin-bottom: 12px;
        }

        .toc-link {
            color: var(--dark);
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
            padding: 8px 12px;
            border-radius: 6px;
        }

        .toc-link:hover {
            background: var(--primary);
            color: var(--color-dark);
        }

        .toc-link.active {
            background: var(--secondary);
            color: white;
        }

        .tos-content {
            padding: 30px;
            max-height: 600px;
            overflow-y: auto;
        }

        .section {
            margin-bottom: 40px;
            scroll-margin-top: 20px;
        }

        .section-title {
            font-size: 22px;
            font-weight: 600;
            margin-bottom: 15px;
            color: var(--color-dark);
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .section-content {
            color: #444;
        }

        .section-content p {
            margin-bottom: 15px;
        }

        .highlight {
            background: var(--primary);
            padding: 2px 5px;
            border-radius: 3px;
            font-weight: 500;
        }

        /* Responsive Design */
        @media (min-width: 992px) {
            .tos-container {
                display: flex;
            }
            
            .toc-sidebar {
                width: 300px;
                flex-shrink: 0;
            }
        }

        @media (max-width: 991px) {
            .toc-sidebar {
                border-right: none;
                border-bottom: 1px solid #eee;
            }
        }

        @media (max-width: 576px) {
            .header-content {
                flex-direction: column;
                text-align: center;
                gap: 15px;
            }
            
            .page-title {
                font-size: 24px;
            }
            
            .section-title {
                font-size: 20px;
            }
        }

        /* Custom Scrollbar */
        .tos-content::-webkit-scrollbar {
            width: 8px;
        }

        .tos-content::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

