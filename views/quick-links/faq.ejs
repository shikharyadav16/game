<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FAQ - NextScrimz</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #ffe69b;
            --primary-dark: rgb(149, 123, 74);
            --color-dark: #161616;
            --secondary: #00cec9;
            --dark: #2d3436;
            --light: #f7f9fc;
            --success: #00b894;
            --warning: #fdcb6e;
            --danger: #e17055;
            --nav-height: 80px;
            --border-radius: 8px;
            --box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            --transition: all 0.3s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: var(--dark);
            background-color: var(--light);
        }

        .container {
            width: 90%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }
        /* Hero Section */
        .faq-hero {
            background: linear-gradient(135deg, var(--color-dark) 0%, #2a2a3a 100%);
            color: white;
            padding: 4rem 0;
            text-align: center;
            margin-bottom: 3rem;
        }

        .faq-hero h2 {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            color: var(--primary);
        }

        .faq-hero p {
            font-size: 1.2rem;
            max-width: 700px;
            margin: 0 auto;
            opacity: 0.9;
        }

        .search-box {
            max-width: 500px;
            margin: 2rem auto 0;
            position: relative;
        }

        .search-box input {
            width: 100%;
            padding: 0.8rem 1rem 0.8rem 3rem;
            border: none;
            border-radius: 50px;
            font-size: 1rem;
            box-shadow: var(--box-shadow);
        }

        .search-box i {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--dark);
        }

        /* Main Content */
        .faq-content {
            padding: 2rem 0 4rem;
        }

        .faq-categories {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            margin-bottom: 2rem;
            justify-content: center;
        }

        .category-btn {
            background-color: white;
            border: 2px solid var(--primary);
            color: var(--dark);
            padding: 0.5rem 1.5rem;
            border-radius: 50px;
            font-weight: 500;
            cursor: pointer;
            transition: var(--transition);
        }

        .category-btn:hover, .category-btn.active {
            background-color: var(--primary);
        }

        .faq-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        .faq-item {
            background-color: white;
            border-radius: var(--border-radius);
            padding: 1.5rem;
            box-shadow: var(--box-shadow);
            transition: var(--transition);
            cursor: pointer;
            border-left: 4px solid var(--primary);
        }

        .faq-item:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
        }

        .faq-item.open {
            border-left-color: var(--secondary);
        }

        .faq-question {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-weight: 600;
            font-size: 1.1rem;
        }

        .faq-question span {
            margin-right: 1rem;
            color: var(--primary-dark);
            font-weight: bold;
        }

        .faq-answer {
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 1px solid #eee;
            color: var(--dark);
            display: none;
        }

        .faq-item.open .faq-answer {
            display: block;
        }

        .faq-toggle {
            color: var(--primary-dark);
            font-size: 1.2rem;
            transition: var(--transition);
        }

        .faq-item.open .faq-toggle {
            transform: rotate(180deg);
            color: var(--secondary);
        }

        .badge {
            display: inline-block;
            padding: 0.3rem 0.6rem;
            border-radius: 4px;
            font-size: 0.8rem;
            font-weight: 600;
            margin-left: 0.5rem;
        }

        .badge.success {
            background-color: rgba(0, 184, 148, 0.2);
            color: var(--success);
        }

        .badge.danger {
            background-color: rgba(225, 112, 85, 0.2);
            color: var(--danger);
        }

        .support-cta {
            background: linear-gradient(135deg, var(--color-dark) 0%, #2a2a3a 100%);
            color: white;
            padding: 2rem;
            border-radius: var(--border-radius);
            text-align: center;
            margin-top: 3rem;
        }

        .support-cta h3 {
            color: var(--primary);
            margin-bottom: 1rem;
        }

        .support-cta p {
            margin-bottom: 1.5rem;
            opacity: 0.9;
        }

        .btn {
            background-color: var(--secondary);
            color: white;
            border: none;
            padding: 0.8rem 1.5rem;
            border-radius: var(--border-radius);
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            display: inline-flex;
            align-items: center;
        }

        .btn i {
            margin-right: 8px;
        }

        .btn:hover {
            background-color: var(--primary);
            color: var(--color-dark);
        }

        /* Responsive Styles */
        @media (max-width: 768px) {
            .header-content {
                flex-direction: column;
                text-align: center;
            }
            
            nav ul {
                margin-top: 1rem;
                justify-content: center;
            }
            
            nav ul li {
                margin: 0 0.5rem;
            }
            
            .faq-hero h2 {
                font-size: 2rem;
            }
            
            
            .faq-question {
                font-size: 1rem;
            }
        }

        @media (max-width: 480px) {
            .logo h1 {
                font-size: 1.5rem;
            }
            
            .faq-hero {
                padding: 2rem 0;
            }
            
            .faq-hero h2 {
                font-size: 1.8rem;
            }
            
            .faq-item {
                padding: 1.2rem;
            }
            
            .category-btn {
                padding: 0.4rem 1rem;
                font-size: 0.9rem;
            }
        }
    </style>
</head>
<body>

    <%- include('./header-footer/header') %>

    <section class="faq-hero">
        <div class="container">
            <h2>Frequently Asked Questions</h2>
            <p>Find answers to common questions about NextScrimz tournaments, payments, rules, and more.</p>
            
            <div class="search-box">
                <i class="fas fa-search"></i>
                <input type="text" placeholder="Search for questions...">
            </div>
        </div>
    </section>

    <section class="faq-content">
        <div class="container">
            <div class="faq-categories">
                <button class="category-btn active">All Questions</button>
                <button class="category-btn">Tournaments</button>
                <button class="category-btn">Payments</button>
                <button class="category-btn">Rules</button>
                <button class="category-btn">Technical</button>
            </div>
            
            <div class="faq-grid">
                <div class="faq-item">
                    <div class="faq-question">
                        <div><span>1.</span> Is the kill prize given only to the winner?</div>
                        <i class="fas fa-chevron-down faq-toggle"></i>
                    </div>
                    <div class="faq-answer">
                        <p>No ‚ùå. Kill prizes are rewarded to all players who score kills, regardless of their final position. It is not only for the #1 winner.</p>
                    </div>
                </div>
                
                <div class="faq-item">
                    <div class="faq-question">
                        <div><span>2.</span> What is NextScrimz?</div>
                        <i class="fas fa-chevron-down faq-toggle"></i>
                    </div>
                    <div class="faq-answer">
                        <p>NextScrimz is a platform that allows gamers and teams to join and host scrims, tournaments, and practice matches for battle royale games like BGMI, Free Fire, CODM, and more.</p>
                    </div>
                </div>
                
                <div class="faq-item">
                    <div class="faq-question">
                        <div><span>3.</span> How do I register for a scrim/tournament?</div>
                        <i class="fas fa-chevron-down faq-toggle"></i>
                    </div>
                    <div class="faq-answer">
                        <p>Simply visit our Tournaments page, select an event, and click Join Now. You'll need to provide your in-game details and (if required) pay the entry fee securely through Razorpay.</p>
                    </div>
                </div>
                
                <div class="faq-item">
                    <div class="faq-question">
                        <div><span>4.</span> Do I need to pay to participate?</div>
                        <i class="fas fa-chevron-down faq-toggle"></i>
                    </div>
                    <div class="faq-answer">
                        <p>Some scrims are free, while others may have a small entry fee. Paid tournaments usually come with prize pools that are distributed to winners.</p>
                    </div>
                </div>
                
                <div class="faq-item">
                    <div class="faq-question">
                        <div><span>5.</span> How do I get match room IDs and passwords?</div>
                        <i class="fas fa-chevron-down faq-toggle"></i>
                    </div>
                    <div class="faq-answer">
                        <p>Once registered, the Room ID & Password will appear inside the My Games page of your account before the match starts.</p>
                    </div>
                </div>
                
                <div class="faq-item">
                    <div class="faq-question">
                        <div><span>6.</span> How are scores calculated?</div>
                        <i class="fas fa-chevron-down faq-toggle"></i>
                    </div>
                    <div class="faq-answer">
                        <p>Scores are based on kills + placement points, following standard esports scoring systems. Detailed rules are available on the Rules & Regulations page.</p>
                    </div>
                </div>
                
                <div class="faq-item">
                    <div class="faq-question">
                        <div><span>7.</span> When will I receive my prize money?</div>
                        <i class="fas fa-chevron-down faq-toggle"></i>
                    </div>
                    <div class="faq-answer">
                        <p>Prize money is transferred within 24‚Äì48 hours after the event ends, directly through Razorpay/UPI.</p>
                    </div>
                </div>
                
                <div class="faq-item">
                    <div class="faq-question">
                        <div><span>8.</span> What happens if someone cheats or uses hacks?</div>
                        <i class="fas fa-chevron-down faq-toggle"></i>
                    </div>
                    <div class="faq-answer">
                        <p>We have a zero-tolerance policy against cheating. If caught, the player/team will be disqualified immediately and banned from future events.</p>
                    </div>
                </div>
                
                <div class="faq-item">
                    <div class="faq-question">
                        <div><span>9.</span> Can I join with friends or only solo?</div>
                        <i class="fas fa-chevron-down faq-toggle"></i>
                    </div>
                    <div class="faq-answer">
                        <p>Yes! You can join as Solo, Duo, or Squad, depending on the tournament format.</p>
                    </div>
                </div>
                
                <div class="faq-item">
                    <div class="faq-question">
                        <div><span>10.</span> What if I face technical issues during a match?</div>
                        <i class="fas fa-chevron-down faq-toggle"></i>
                    </div>
                    <div class="faq-answer">
                        <p>Unfortunately, we cannot restart or re-host matches for individual players due to internet/device issues. Please ensure a stable connection before joining.</p>
                    </div>
                </div>
                
                <div class="faq-item">
                    <div class="faq-question">
                        <div><span>11.</span> How can I contact support?</div>
                        <i class="fas fa-chevron-down faq-toggle"></i>
                    </div>
                    <div class="faq-answer">
                        <p>You can reach us through the Contact Us page or directly on our official Discord/Telegram channel.</p>
                    </div>
                </div>
                
                <div class="faq-item">
                    <div class="faq-question">
                        <div><span>12.</span> Can I host my own tournament on NextScrimz?</div>
                        <i class="fas fa-chevron-down faq-toggle"></i>
                    </div>
                    <div class="faq-answer">
                        <p>Yes! If you're an organizer, you can partner with us to host events. Reach out via the Contact Page for collaboration details.</p>
                    </div>
                </div>
                
                <div class="faq-item">
                    <div class="faq-question">
                        <div><span>13.</span> Is NextScrimz safe and legit? <span class="badge success">Verified</span></div>
                        <i class="fas fa-chevron-down faq-toggle"></i>
                    </div>
                    <div class="faq-answer">
                        <p>Absolutely ‚úÖ. All payments are handled through Razorpay, ensuring secure transactions, and we maintain transparency in prize distribution.</p>
                    </div>
                </div>
            </div>
            
            <div class="support-cta">
                <h3>Still have questions?</h3>
                <p>Can't find the answer you're looking for? Please reach out to our friendly support team.</p>
                <a href="#" class="btn"><i class="fas fa-headset"></i> Contact Support</a>
            </div>
        </div>
    </section>

    <%- include('./header-footer/footer') %>

    <script>
        // FAQ toggle functionality
        document.querySelectorAll('.faq-item').forEach(item => {
            const question = item.querySelector('.faq-question');
            question.addEventListener('click', () => {
                item.classList.toggle('open');
            });
        });

        // Search functionality
        const searchInput = document.querySelector('.search-box input');
        const faqItems = document.querySelectorAll('.faq-item');
        
        searchInput.addEventListener('input', () => {
            const searchTerm = searchInput.value.toLowerCase();
            
            faqItems.forEach(item => {
                const question = item.querySelector('.faq-question').textContent.toLowerCase();
                const answer = item.querySelector('.faq-answer').textContent.toLowerCase();
                
                if (question.includes(searchTerm) || answer.includes(searchTerm)) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
        });

        // Category filtering
        const categoryButtons = document.querySelectorAll('.category-btn');
        
        categoryButtons.forEach(button => {
            button.addEventListener('click', () => {
                categoryButtons.forEach(btn => btn.classList.remove('active'));
                button.classList.add('active');
                
                // In a real implementation, this would filter by category
                // For this example, we'll just show all items
                faqItems.forEach(item => {
                    item.style.display = 'block';
                });
                
                if (searchInput.value) {
                    searchInput.dispatchEvent(new Event('input'));
                }
            });
        });
    </script>
</body>
</html>