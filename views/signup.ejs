    <script>
        let selectedGame = null;
        const signupBtn = document.getElementById("signup-btn");
        const selectBgmi = document.getElementsByClassName("select-bgmi")[0];
        const selectFf = document.getElementsByClassName("select-ff")[0];

        signupBtn.addEventListener("click", (e) => {
            e.preventDefault();
            handleSignup();
        });
        selectBgmi.addEventListener("click", (e) => {
            e.preventDefault();
            disableSelectGame();
            selectBgmi.style.outline = "2px solid #000000bc"
            selectedGame = "bgmi";
        })
        selectFf.addEventListener("click", (e) => {
            e.preventDefault();
            disableSelectGame();
            selectFf.style.outline = "2px solid #000000bc"
            selectedGame = "ff";
        })

        function disableSelectGame() {
            document.getElementsByClassName("select-bgmi")[0].style.outline = "1px solid rgba(0, 0, 0, 0.23)";
            document.getElementsByClassName("select-ff")[0].style.outline = "1px solid rgba(0, 0, 0, 0.23)";
        }

        function disableBtn() {
            document.getElementById("ign").disabled = true;
            document.getElementById("email").disabled = true;
            document.getElementById("password").disabled = true;
        }

        function enableBtn() {
            document.getElementById("ign").disabled = false;
            document.getElementById("email").disabled = false;
            document.getElementById("password").disabled = false;
        }

        function originalState() {
            document.getElementById("loading-signup-btn").style.display = "none";
            document.getElementById("signup-btn").style.display = "block";
        }

        function setCardTimeout(eName, eDescription) {
            let errorName = document.getElementById("error-name");
            let errorDescription = document.getElementById("error-description");
            const card = document.getElementsByClassName('error-card')[0];

            errorName.innerText = eName;
            errorDescription.innerText = eDescription;
            card.classList.remove("hide");

            setTimeout(() => {
                card.classList.add('hide');
            }, 3000);
        }

        function validateIndianPhone(phone) {
            phone = phone.trim().replace(/[\s\-()]/g, "");

            if (phone.startsWith("+91")) {
                phone = phone.slice(3);
            }

            if (phone.startsWith("91") && phone.length === 12) {
                phone = phone.slice(2);
            }

            if (/^[6-9]\d{9}$/.test(phone)) {
                return phone;
            }

            return false;
        }

        function handleSignup() {
            const userIgn = document.getElementById("ign").value;
            const userEmail = document.getElementById("email").value;
            let nonValidPhone = document.getElementById("phone").value.trim();
            const userGame = selectedGame;
            const userPassword = document.getElementById("password").value;

            if (userIgn.length === 0 || userPassword.length === 0 || userEmail.length === 0) {
                return setCardTimeout("Signup error!", "This field is required and cannot be left blank.")
            }
            const userPhone = validateIndianPhone(nonValidPhone);
            if (!userPhone) {
                return setCardTimeout("Signup error!", "Invalid phone number")
            }


            if (userIgn.length < 4) {
                return setCardTimeout("Signup error!", "IGN should be atleast 4 characters.")
            }

            if (userGame === null) {
                return setCardTimeout("Signup error!", "Please select atleast one game.")
            }

            if (userPassword.length < 6) {
                return setCardTimeout("Signup error!", "Password should be atleast 6 characters.")
            }

            if (userIgn.length >= 60 || userPassword.length >= 60 || userEmail.length >= 60) {
                return setCardTimeout("Signup error!", "Input exceeds maximum allowed length. Please shorten your entry.")
            }
            document.getElementById("loading-signup-btn").style.display = "block";
            document.getElementById("signup-btn").style.display = "none";
            disableBtn();
            sendOTP(userEmail, userIgn, userPassword, userGame, userPhone);
        }

        async function sendOTP(userEmail, userIgn, userPassword, userGame, userPhone) {

            try {
                sessionStorage.setItem("email", userEmail);
                sessionStorage.setItem("user", JSON.stringify({ userEmail, userIgn, userPassword, userGame, userPhone }));
                const res = await fetch('/send-otp', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email: userEmail, ign: userIgn })
                });
                if (res.ok) {
                    const data = await res.json();
                    window.location.href = data.redirected;
                } else {
                    const data = await res.json();
                    enableBtn();
                    originalState();
                    setCardTimeout(data.name, data.description);
                }
            } catch (err) {
                if (err) {
                    console.log("Error:", err);
                    setCardTimeout("Server Error!", "Please reload the page.")
                }
            }
        }

    </script>

