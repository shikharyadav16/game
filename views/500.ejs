<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>500 Internal Server Error</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@phosphor-icons/web@2.1.2/src/regular/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@phosphor-icons/web@2.1.2/src/bold/style.css">
    <style>
        :root {
            --primary: #bf9e60;
            --primary-dark: #8e7443;
            --color-dark: #161616;
            --secondary: #00cec9;
            --dark: #2d3436;
            --light: #f7f9fc;
            --success: #00b894;
            --warning: #fdcb6e;
            --danger: #e17055;
            --nav-height: 80px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: var(--color-dark);
            color: var(--light);
            min-height: 100vh;
            background-image:
                radial-gradient(circle at 10% 20%, rgba(45, 52, 54, 0.1) 0%, rgba(22, 22, 22, 0.9) 90%),
                linear-gradient(to bottom, rgba(22, 22, 22, 0.9), rgba(22, 22, 22, 1));
            background-attachment: fixed;
            display: flex;
            flex-direction: column;
            overflow-x: hidden;
        }

        /* Header styles */
        header {
            background-color: rgba(22, 22, 22, 0.95);
            height: var(--nav-height);
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 5%;
            position: sticky;
            top: 0;
            z-index: 100;
            border-bottom: 1px solid var(--primary-dark);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 15px;
            color: var(--primary);
        }

        .logo-icon {
            color: var(--primary);
            font-size: 2.2rem;
        }

        .logo-text {
            font-size: 1.8rem;
            font-weight: 700;
            background: linear-gradient(to right, var(--primary), var(--warning));
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            letter-spacing: 1px;
        }

        /* Main content */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 40px 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            flex: 1;
            text-align: center;
            position: relative;
        }

        .error-code {
            font-size: 18rem;
            font-weight: 900;
            background: linear-gradient(to bottom, var(--danger), var(--warning));
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            line-height: 1;
            margin: 20px 0;
            position: relative;
            z-index: 1;
            text-shadow: 0 0 50px rgba(225, 112, 85, 0.3);
        }

        @media (max-width: 768px) {
            .error-code {
                font-size: 12rem;
            }
        }

        .server-icon {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 24rem;
            opacity: 0.03;
            color: var(--danger);
            z-index: 0;
            animation: pulse 4s infinite ease-in-out;
        }

        @keyframes pulse {
            0% {
                opacity: 0.03;
            }

            50% {
                opacity: 0.08;
            }

            100% {
                opacity: 0.03;
            }
        }

        .error-title {
            font-size: 3rem;
            margin-bottom: 20px;
            color: var(--light);
            position: relative;
            z-index: 2;
        }

        .error-message {
            font-size: 1.4rem;
            max-width: 700px;
            margin: 0 auto 40px;
            color: rgba(247, 249, 252, 0.8);
            line-height: 1.6;
            position: relative;
            z-index: 2;
        }

        .highlight {
            color: var(--warning);
            font-weight: 600;
        }

        .action-buttons {
            display: flex;
            gap: 20px;
            margin: 40px 0;
            flex-wrap: wrap;
            justify-content: center;
            position: relative;
            z-index: 2;
        }

        .btn {
            padding: 16px 40px;
            border-radius: 8px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            text-decoration: none;
        }

        .btn-primary {
            background: linear-gradient(145deg, var(--primary), var(--primary-dark));
            color: white;
            border: none;
            box-shadow: 0 5px 15px rgba(191, 158, 96, 0.3);
        }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(191, 158, 96, 0.4);
        }

        .btn-secondary {
            background: rgba(45, 52, 54, 0.6);
            color: var(--light);
            border: 1px solid rgba(191, 158, 96, 0.3);
        }

        .btn-secondary:hover {
            background: rgba(45, 52, 54, 0.8);
            border-color: var(--primary);
        }

        .troubleshooting {
            background: rgba(45, 52, 54, 0.6);
            border-radius: 16px;
            padding: 30px;
            margin: 40px 0;
            max-width: 900px;
            text-align: left;
            border: 1px solid rgba(191, 158, 96, 0.2);
            position: relative;
            z-index: 2;
        }

        .troubleshooting h3 {
            font-size: 1.8rem;
            margin-bottom: 25px;
            color: var(--primary);
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .troubleshooting-list {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
        }

        .troubleshooting-item {
            display: flex;
            gap: 15px;
        }

        .troubleshooting-icon {
            color: var(--secondary);
            font-size: 1.4rem;
            min-width: 30px;
        }

        .troubleshooting-content h4 {
            margin-bottom: 8px;
            color: var(--light);
        }

        .troubleshooting-content p {
            color: rgba(247, 249, 252, 0.7);
            font-size: 1rem;
            line-height: 1.5;
        }

        .status-container {
            display: flex;
            justify-content: center;
            margin: 20px 0;
            position: relative;
            z-index: 2;
        }

        .status-indicator {
            display: flex;
            align-items: center;
            gap: 10px;
            background: rgba(45, 52, 54, 0.6);
            padding: 10px 20px;
            border-radius: 50px;
            border: 1px solid rgba(253, 203, 110, 0.3);
        }

        .status-dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background-color: var(--warning);
            animation: blink 1.5s infinite;
        }

        @keyframes blink {
            0% {
                opacity: 0.3;
            }

            50% {
                opacity: 1;
            }

            100% {
                opacity: 0.3;
            }
        }

        .status-text {
            color: var(--warning);
            font-weight: 500;
        }

        /* Footer */
        footer {
            background: rgba(22, 22, 22, 0.95);
            padding: 30px 5%;
            margin-top: auto;
            border-top: 1px solid rgba(191, 158, 96, 0.2);
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            gap: 40px;
        }

        .footer-section {
            flex: 1;
            min-width: 250px;
        }

        .footer-section h3 {
            color: var(--primary);
            margin-bottom: 20px;
            font-size: 1.3rem;
        }

        .footer-links {
            list-style: none;
        }

        .footer-links li {
            margin-bottom: 12px;
        }

        .footer-links a {
            color: var(--light);
            text-decoration: none;
            transition: color 0.3s;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .footer-links a:hover {
            color: var(--primary);
        }

        .footer-links i {
            width: 20px;
            text-align: center;
        }

        .copyright {
            text-align: center;
            padding-top: 30px;
            margin-top: 30px;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            color: rgba(255, 255, 255, 0.6);
            font-size: 0.9rem;
        }

        /* Animation for particles */
        .particles {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;
            pointer-events: none;
        }

        .particle {
            position: absolute;
            width: 2px;
            height: 2px;
            background: var(--primary);
            border-radius: 50%;
            opacity: 0;
            animation: float 10s infinite linear;
        }

        @keyframes float {
            0% {
                transform: translateY(0) translateX(0);
                opacity: 0;
            }

            10% {
                opacity: 0.8;
            }

            90% {
                opacity: 0.2;
            }

            100% {
                transform: translateY(-100vh) translateX(100px);
                opacity: 0;
            }
        }

        /* Responsive design */
        @media (max-width: 768px) {
            .error-title {
                font-size: 2.2rem;
            }

            .error-code {
                font-size: 6rem;
            }

            .error-message {
                font-size: 1.1rem;
            }

            .logo h1{
                font-size: 1.4rem;
            }

            .logo-icon {
                font-size: 1.6rem;
            }

            .action-buttons {
                flex-direction: column;
                width: 100%;
                max-width: 300px;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
</head>

<body>
    <!-- Header -->
    <header>
        <div class="logo">
            <i class="ph ph-finn-the-human logo-icon"></i>
            <h1>NextScrimz</h1>
        </div>
    </header>

    <!-- Particles -->
    <div class="particles" id="particles"></div>

    <!-- Main Content -->
    <div class="container">
        <i class="fas fa-server server-icon"></i>
        <div class="error-code">500</div>
        <h1 class="error-title">Internal Server Error</h1>
        <p class="error-message">
            Our servers encountered an unexpected condition that prevented it from fulfilling your request.
            <span class="highlight">Don't worry, our team has been notified</span> and is working to resolve the issue.
        </p>

        <div class="status-container">
            <div class="status-indicator">
                <div class="status-dot"></div>
                <div class="status-text">Investigating the issue</div>
            </div>
        </div>

        <div class="action-buttons">
            <a href="/games" class="btn btn-primary">
                <i class="fas fa-arrow-left"></i> Return to Home
            </a>
            <a href="/" class="btn btn-secondary">
                <i class="fas fa-redo-alt"></i> Try Again
            </a>
            <a href="/contact" class="btn btn-secondary">
                <i class="fas fa-headset"></i> Contact Support
            </a>
        </div>

        <div class="troubleshooting">
            <h3><i class="fas fa-tools"></i> Troubleshooting Tips</h3>
            <div class="troubleshooting-list">
                <div class="troubleshooting-item">
                    <div class="troubleshooting-icon">
                        <i class="fas fa-sync-alt"></i>
                    </div>
                    <div class="troubleshooting-content">
                        <h4>Refresh the Page</h4>
                        <p>Sometimes a simple refresh can resolve temporary issues. Press F5 or the refresh button.</p>
                    </div>
                </div>
                <div class="troubleshooting-item">
                    <div class="troubleshooting-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="troubleshooting-content">
                        <h4>Wait a Few Minutes</h4>
                        <p>Our team may have already fixed the issue. Try again in a few minutes.</p>
                    </div>
                </div>
                <div class="troubleshooting-item">
                    <div class="troubleshooting-icon">
                        <i class="fas fa-cookie-bite"></i>
                    </div>
                    <div class="troubleshooting-content">
                        <h4>Clear Browser Cache</h4>
                        <p>Outdated cache files can sometimes cause issues. Clear your browser cache and try again.</p>
                    </div>
                </div>
                <div class="troubleshooting-item">
                    <div class="troubleshooting-icon">
                        <i class="fas fa-network-wired"></i>
                    </div>
                    <div class="troubleshooting-content">
                        <h4>Check Your Connection</h4>
                        <p>Ensure you have a stable internet connection. Try accessing other websites to verify.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <div class="footer-content">
            <div class="footer-section">
                <h3>ELITE ESPORTS</h3>
                <p>Professional esports platform for competitive gamers. Join tournaments, track stats, and compete with
                    the best.</p>
            </div>
            <div class="footer-section">
                <h3>Quick Links</h3>
                <ul class="footer-links">
                    <li><a href="/"><i class="fas fa-home"></i> Home</a></li>
                    <li><a href="/games"><i class="fas fa-trophy"></i> Tournaments</a></li>
                    <li><a href="/history"><i class="fas fa-history"></i> Match History</a></li>
                    <li><a href="/profile"><i class="fas fa-user"></i> Profile</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>Support</h3>
                <ul class="footer-links">
                    <li><a href="/contact"><i class="fas fa-headset"></i> Contact Us</a></li>
                    <li><a href="/help"><i class="fas fa-question-circle"></i> Help Center</a></li>
                    <li><a href="/report"><i class="fas fa-bug"></i> Report Issue</a></li>
                    <li><a href="/"><i class="fas fa-file-alt"></i> Status Page</a></li>
                </ul>
            </div>
        </div>
        <div class="copyright">
            &copy; 2025 ELITE ESPORTS. All rights reserved. • Server Status: <span
                style="color: var(--warning);">Experiencing Issues</span>
        </div>
    </footer>

    <script>
        // Create background particles
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 50;

            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.classList.add('particle');

                // Random position
                const posX = Math.random() * 100;
                const posY = Math.random() * 100;
                particle.style.left = `${posX}%`;
                particle.style.top = `${posY}%`;

                // Random size
                const size = Math.random() * 3 + 1;
                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;

                // Random animation duration
                const duration = Math.random() * 10 + 10;
                particle.style.animationDuration = `${duration}s`;

                // Random delay
                const delay = Math.random() * 5;
                particle.style.animationDelay = `${delay}s`;

                particlesContainer.appendChild(particle);
            }
        }

        // Initialize particles
        createParticles();

        // Add try again functionality
        document.querySelector('.btn-secondary:nth-child(2)').addEventListener('click', function (e) {
            e.preventDefault();
            document.querySelector('.status-text').textContent = 'Attempting to reconnect...';
            document.querySelector('.status-dot').style.backgroundColor = "var('--secondary')";

            // Simulate loading
            setTimeout(() => {
                document.querySelector('.status-text').textContent = 'Connection failed. Still investigating';
                document.querySelector('.status-dot').style.backgroundColor = "var('--warning')";
                alert('Sorry, the server is still unavailable. Please try again later.');
            }, 3000);
        });
    </script>
</body>

</html>