<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Esports Custom Match Payment</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <style>
      * {
        --primary: #bf9e60;
        --primary-dark: #8e7443;
        --color-dark: #161616;
        --secondary: #00cec9;
        --dark: #2d3436;
        --light: #f7f9fc;
        --success: #00b894;
        --warning: #fdcb6e;
        --danger: #e17055;
        --nav-height: 80px;
        --card-bg: #ffffff;
        --card-shadow: 0 10px 30px rgba(22, 22, 22, 0.08);
        --border-light: rgba(45, 52, 54, 0.1);
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      }

      body {
        background-color: #f8f9fa;
        color: var(--dark);
        min-height: 100vh;
        background: linear-gradient(135deg, #1a1a1a 0%, #0d0d0d 100%);
      }

      /* Header styles */

      /* Main content */
      .container {
        max-width: 1200px;
        margin: 40px auto;
        padding: 0 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
      }

      @media (max-width: 900px) {
        .container {
          grid-template-columns: 1fr;
        }
      }

      .page-header {
        --primary-dark: rgb(149, 123, 74);
        grid-column: 1 / -1;
        color: var(--primary);
        text-align: center;
        margin-bottom: 20px;
      }

      .page-header h1 {
        --primary: #ffe69b;
        font-size: 2.8rem;
        margin-bottom: 15px;
        color: var(--primary);
        text-shadow: 0 0 10px rgba(191, 158, 96, 0.1);
      }

      .page-header p {
        color: var(--light);
        font-size: 1.1rem;
        max-width: 600px;
        margin: 0 auto;
        line-height: 1.6;
      }

      /* Tournament Details Card */
      .tournament-card {
        background: var(--card-bg);
        border-radius: 4px;
        padding: 30px;
        width: 100%;
        max-width: 800px;
        box-shadow: var(--card-shadow);
        border: 1px solid var(--border-light);
        transition: transform 0.3s, box-shadow 0.3s;
      }

      .tournament-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 40px rgba(22, 22, 22, 0.12);
      }

      .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
        padding-bottom: 20px;
        border-bottom: 1px solid var(--border-light);
      }

      .card-header h2 {
        font-size: 1.8rem;
        color: var(--primary);
      }

      .game-badge {
        background: linear-gradient(
          145deg,
          var(--primary),
          var(--primary-dark)
        );
        color: white;
        padding: 8px 16px;
        border-radius: 50px;
        font-weight: 600;
        font-size: 0.9rem;
      }

      .tournament-details {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
      }

      .detail-item {
        display: flex;
        flex-direction: column;
        gap: 8px;
      }

      .detail-label {
        color: rgba(45, 52, 54, 0.7);
        font-weight: 500;
        font-size: 0.95rem;
        display: flex;
        align-items: center;
        gap: 8px;
      }

      .detail-value {
        font-size: 1rem;
        font-weight: 600;
        color: var(--dark);
      }

      .prize-breakdown {
        background: rgba(247, 249, 252, 0.8);
        border-radius: 12px;
        padding: 20px;
        margin: 25px 0;
      }

      .prize-breakdown h3 {
        margin-bottom: 15px;
        color: var(--primary);
        display: flex;
        align-items: center;
        gap: 10px;
      }

      .prize-item {
        display: flex;
        justify-content: space-between;
        padding: 12px 0;
        border-bottom: 1px solid var(--border-light);
      }

      .prize-item:last-child {
        border-bottom: none;
      }

      .player-details {
        margin-block: 30px;
      }

      .player-details > div {
        margin-top: 18px;
      }

      .player-info div {
        font-size: 12px;
        font-weight: bold;
        margin-left: 3px;
        margin-bottom: 5px;
        color: #2d3436;
      }

      .player-details input {
        width: 100%;
        padding-left: 15px;
        height: 40px;
        border-radius: 7px;
        font-size: 16px;
        border: none;
        outline: 1px solid rgb(215, 215, 215);
      }
      .player-details input:focus {
        outline: 2px solid var(--dark);
      }
      .team-info div{
        font-size: 14px;
        font-weight: bold;
        margin-left: 3px;
        margin-bottom: 5px;
        color: #2d3436;
      }

      .additional-details {
        margin-block: 15px;
      }

      .details-btn {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        background: var(--light);
        color: var(--dark);
        border: 1px solid var(--border-light);
        padding: 12px 24px;
        border-radius: 8px;
        font-weight: 500;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        cursor: pointer;
        transition: all 0.3s;
      }

      .details-btn:hover {
        background: rgba(191, 158, 96, 0.1);
        border-color: var(--primary);
        color: var(--primary);
      }

      .payment-methods {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 15px;
        margin-bottom: 25px;
      }

      .method {
        border: 2px solid var(--border-light);
        border-radius: 10px;
        padding: 15px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
        margin-top: 15px;
        cursor: pointer;
        transition: all 0.3s;
      }

      .method:hover,
      .method.active {
        border-color: var(--primary);
        background: rgba(191, 158, 96, 0.05);
      }

      .method i {
        font-size: 2rem;
        color: var(--primary);
      }

      .method span {
        font-weight: 500;
      }

      .form-group {
        margin-bottom: 20px;
      }

      .form-group label {
        display: block;
        margin-bottom: 8px;
        font-weight: 500;
        color: rgba(45, 52, 54, 0.8);
      }

      .form-control {
        width: 100%;
        padding: 14px 18px;
        border: 1px solid var(--border-light);
        border-radius: 8px;
        background: var(--light);
        font-size: 1rem;
        transition: border-color 0.3s;
      }

      .form-control:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 2px rgba(191, 158, 96, 0.2);
      }

      .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
      }

      .payment-summary {
        background: rgba(247, 249, 252, 0.8);
        border-radius: 12px;
        padding: 20px;
        margin: 25px 0;
      }

      .summary-item {
        display: flex;
        justify-content: space-between;
        padding: 12px 0;
      }

      .summary-item.total {
        border-top: 1px solid var(--border-light);
        margin-top: 10px;
        padding-top: 20px;
        font-weight: 700;
        font-size: 1.2rem;
        color: var(--primary);
      }

      .pay-btn {
        width: 100%;
        padding: 16px;
        background: linear-gradient(
          145deg,
          var(--primary),
          var(--primary-dark)
        );
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: transform 0.3s, box-shadow 0.3s;
        box-shadow: 0 5px 15px rgba(191, 158, 96, 0.3);
      }

      .pay-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(191, 158, 96, 0.4);
      }

      /* Footer */
      footer {
        background: #ffffff;
        padding: 20px 5%;
        margin-bottom: 65px;
        margin-top: 60px;
        border-top: 1px solid var(--border-light);
      }

      .footer-content {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 40px;
      }

      .footer-section {
        flex: 1;
        min-width: 250px;
      }

      .footer-section h3 {
        color: var(--primary-dark);
        margin-bottom: 20px;
        font-size: 1.3rem;
      }

      .footer-links {
        list-style: none;
      }

      .footer-links li {
        margin-bottom: 12px;
      }

      .footer-links a {
        color: var(--dark);
        text-decoration: none;
        transition: color 0.3s;
        display: flex;
        align-items: center;
        gap: 10px;
      }

      .footer-links a:hover {
        color: var(--primary);
      }

      .footer-links i {
        width: 20px;
        text-align: center;
      }

      .copyright {
        text-align: center;
        padding-top: 30px;
        margin-top: 30px;
        border-top: 1px solid var(--border-light);
        color: rgba(45, 52, 54, 0.6);
        font-size: 0.9rem;
      }

      /* Responsive design */
      @media (max-width: 768px) {
        .page-header h1 {
          font-size: 1.5rem;
        }

        .page-header p {
          font-size: 1rem;
        }

        .card-header h2 {
          font-size: 1.2rem;
        }

        .nav-links {
          display: none;
        }

        .tournament-details {
          grid-template-columns: 1fr;
        }

        .form-row {
          grid-template-columns: 1fr;
        }
      }
    </style>
  </head>

  <body>
    <!-- Header -->
    <%- include('./components/navbars/navbar-games.ejs') %>
    <%-include('./components/notify-card.ejs') %>

    <!-- Main Content -->
    <div class="container">
      <div class="page-header">
        <h1>Tournament Payment</h1>
        <p>
          Complete your registration by making the payment. Secure your spot in
          the competition!
        </p>
      </div>

      <!-- Tournament Details Card -->
      <div class="tournament-card">
        <div class="card-header">
          <h2>Tournament Details</h2>
          <div class="game-badge">
            <% const gameName=(event.eventType==="ff" )?"FF":"BGMI" %>
            <i class="fas fa-dice-d20"></i>
            <%= gameName %>
          </div>
        </div>

        <div class="tournament-details">
          <div class="detail-item">
            <span class="detail-label"
              ><i class="fas fa-tag"></i>
              <%= event.eventName %>
            </span>
            <span class="detail-value"></span>
          </div>
          <div class="detail-item">
            <span class="detail-label"
              ><i class="fas fa-users"></i> Team Size</span
            >
            <span class="detail-value" style="text-transform: capitalize">
              <%= event.eventTeamSize %>
            </span>
          </div>
          <div class="detail-item">
            <span class="detail-label"
              ><i class="fas fa-calendar-alt"></i> Date</span
            >
            <span class="detail-value"> <%= event.eventDate %> </span>
          </div>
          <div class="detail-item">
            <span class="detail-label"><i class="fas fa-clock"></i> Time</span>
            <span class="detail-value"> <%= event.eventTime %> </span>
          </div>
          <div class="detail-item">
            <span class="detail-label"
              ><i class="fas fa-user-friends"></i><%= (event.eventTeamSize ===
              "solo" ? "Players": "Teams") %></span
            >
            <% const playersJoined=event.eventArray.length %>
            <span class="detail-value">
              <%= playersJoined %>/<%= event.eventSize %>
            </span>
          </div>
          <div class="detail-item">
            <span class="detail-label"
              ><i class="fas fa-ticket-alt"></i> Entry Fee</span
            >
            <span class="detail-value" style="color: var(--danger)"
              >Rs <%= event.eventEntry %></span
            >
          </div>
        </div>

        <div class="prize-breakdown">
          <h3><i class="fas fa-award"></i> Prize Breakdown</h3>

          <div class="prize-item">
            <span>Per Kill Prize:</span>
            <span style="color: var(--success); font-weight: 600">
              Rs <%= event.eventKillPrize %> / kill
            </span>
          </div>

          <% event.eventPosPrize.forEach((posPrize, index) => { %> <% if
          (posPrize.prize && posPrize.prize !== 0) { %>
          <div class="prize-item">
            <span><%= index + 1 %> Position Prize:</span>
            <span style="color: var(--success); font-weight: 600">
              Rs <%= posPrize.prize %>
            </span>
          </div>
          <% } %> <% }) %>
        </div>

        <div class="player-details">
          <div class="team-info">
            <div>Team Name:</div>
            <input type="text" placeholder="Team Name:" id="team-name">
            </div>
          <% let teamSize = event.eventTeamSize === "solo" ? 1 :
          (event.eventTeamSize === "duo" ? 2 : 4); %> <% for (let i = 0; i <
          teamSize; i++) { %>

          <div class="player-info">
            <div>
              <%= teamSize === 1 ? "IGN:" : "IGN Player-" + (i + 1) + ":" %>
            </div>
            <input
              value="<%= (i == 0 ? ign : "") %>"
              type="text"
              placeholder="Enter In Game Name"
              name="players[]"
              class="player-info-inp"
            />
          </div>
          <% } %>
        </div>

        <div class="payment-methods">
          <div class="method active">
            <i class="fas fa-wallet"></i>
            <span>eSports Wallet</span>
          </div>
        </div>
        <div class="payment-summary">
          <div class="summary-item">
            <span>Tournament Entry Fee</span>
            <span>Rs <%= event.eventEntry %></span>
          </div>
          <div class="summary-item">
            <span>Processing Fee</span>
            <span>Rs 0</span>
          </div>
          <div class="summary-item total">
            <span>Total Amount</span>
            <span>Rs <%= event.eventEntry %></span>
          </div>
        </div>
        <div class="additional-details">
          <button class="details-btn">
            <i class="fas fa-info-circle"></i> View Additional Details
          </button>
        </div>
        <button class="pay-btn" data-id="<%= event.eventId %>">
          <i class="fas fa-lock"></i> Pay Securely
        </button>
      </div>
    </div>

    <!-- Footer -->
    <footer>
      <div class="copyright">
        &copy; 2025 NextScrimz. All rights reserved. Designed for competitive
        gamers.
      </div>
    </footer>

    <script>
      const payBtn = document.querySelector(".pay-btn");

      payBtn.addEventListener("click", handleRegPayment);

      async function handleRegPayment(e) {
        let players = [];
        const playerInputs = document.querySelectorAll(".player-info-inp");
        let allFilled = true;

        const team = document.getElementById("team-name")
        if (team.value.trim().length > 20 || !team.value.trim()) {
          return sendNotification(
            "error",
            "Kindly enter the valid name of the team.",
            "Registration Error!"
          );
        }
        teamName = team.value.trim();

        playerInputs.forEach((player) => {
          if (!player.value.trim() || player.value.trim().length > 20) {
            allFilled = false;
          }
        });

        if (!allFilled) {
          return sendNotification(
            "error",
            "Kindly enter the valid names of all players.",
            "Registration Error!"
          );
        }

        playerInputs.forEach((player)=> {
          players.push(player.value)
        })

        try {
          const res = await fetch("/payment", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ id: e.currentTarget.dataset.id, players, teamName }),
          });
          const data = await res.json();

          if (data.redirectedTo && data.success) {
            window.location.href = data.redirectedTo;
          } else {
            sendNotification("error", data.message, "Registeration error");
          }
        } catch (err) {
          console.log("Error:", err);
        }
      }
    </script>
  </body>
</html>
