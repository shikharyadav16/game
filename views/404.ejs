<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NextScrimz | 404 | Not Found</title>
  <link rel="icon" type="image/png" id="logo-header-main" href="/logo/logo.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@phosphor-icons/web@2.1.2/src/regular/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@phosphor-icons/web@2.1.2/src/bold/style.css">
    <style>
        :root {
            --primary: #bf9e60;
            --primary-dark: #8e7443;
            --color-dark: #161616;
            --secondary: #00cec9;
            --dark: #2d3436;
            --light: #f7f9fc;
            --success: #00b894;
            --warning: #fdcb6e;
            --danger: #e17055;
            --nav-height: 80px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: var(--color-dark);
            color: var(--light);
            min-height: 100vh;
            background-image:
                radial-gradient(circle at 10% 20%, rgba(45, 52, 54, 0.1) 0%, rgba(22, 22, 22, 0.9) 90%),
                linear-gradient(to bottom, rgba(22, 22, 22, 0.9), rgba(22, 22, 22, 1));
            background-attachment: fixed;
            overflow-x: hidden;
            display: flex;
            flex-direction: column;
        }

        /* Header styles */
        header {
            background-color: rgba(22, 22, 22, 0.95);
            height: var(--nav-height);
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 5%;
            position: sticky;
            top: 0;
            z-index: 100;
            border-bottom: 1px solid var(--primary-dark);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 15px;
            color: var(--primary);
        }

        .logo-icon {
            color: var(--primary);
            font-size: 2.2rem;
        }

        .logo-text {
            font-size: 1.8rem;
            font-weight: 700;
            background: linear-gradient(to right, var(--primary), var(--warning));
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            letter-spacing: 1px;
        }

        /* Main content */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 40px 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            flex: 1;
            text-align: center;
            position: relative;
            z-index: 2;
        }

        .astronaut-container {
            position: relative;
            width: 300px;
            height: 300px;
            margin: 0 auto 40px;
        }

        .astronaut {
            position: relative;
            width: 100%;
            height: 100%;
            animation: float 6s infinite ease-in-out;
        }

        @keyframes float {
            0% {
                transform: translateY(0) rotate(0deg);
            }

            50% {
                transform: translateY(-20px) rotate(5deg);
            }

            100% {
                transform: translateY(0) rotate(0deg);
            }
        }

        .error-code {
            font-size: 10rem;
            font-weight: 900;
            background: linear-gradient(to bottom, var(--primary), var(--warning));
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            line-height: 1;
            margin: 20px 0;
            position: relative;
            text-shadow: 0 0 30px rgba(253, 203, 110, 0.3);
            animation: pulse 2s infinite alternate;
        }

        @keyframes pulse {
            0% {
                text-shadow: 0 0 30px rgba(253, 203, 110, 0.3);
            }

            100% {
                text-shadow: 0 0 60px rgba(253, 203, 110, 0.6);
            }
        }

        .error-title {
            font-size: 2.5rem;
            margin-bottom: 20px;
            color: var(--light);
            position: relative;
        }

        .error-message {
            font-size: 1.4rem;
            max-width: 700px;
            margin: 0 auto 40px;
            color: rgba(247, 249, 252, 0.8);
            line-height: 1.6;
        }

        .highlight {
            color: var(--warning);
            font-weight: 600;
        }

        .search-box {
            background: rgba(45, 52, 54, 0.6);
            border-radius: 50px;
            padding: 5px;
            display: flex;
            max-width: 600px;
            width: 100%;
            margin: 30px 0;
            border: 1px solid rgba(191, 158, 96, 0.3);
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
            transition: all 0.3s;
        }

        .search-box:focus-within {
            border-color: var(--primary);
            box-shadow: 0 5px 25px rgba(191, 158, 96, 0.4);
        }

        .search-input {
            flex: 1;
            padding: 16px 25px;
            background: transparent;
            border: none;
            color: var(--light);
            font-size: 1.1rem;
            outline: none;
        }

        .search-btn {
            background: linear-gradient(145deg, var(--primary), var(--primary-dark));
            color: white;
            border: none;
            border-radius: 50px;
            padding: 0 35px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.3s;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .search-btn:hover {
            transform: scale(1.05);
        }

        .action-buttons {
            display: flex;
            gap: 20px;
            margin: 40px 0;
            flex-wrap: wrap;
            justify-content: center;
        }

        .btn {
            padding: 16px 40px;
            border-radius: 50px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            text-decoration: none;
        }

        .btn-primary {
            background: linear-gradient(145deg, var(--primary), var(--primary-dark));
            color: white;
            border: none;
            box-shadow: 0 5px 15px rgba(191, 158, 96, 0.3);
        }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(191, 158, 96, 0.4);
        }

        .btn-secondary {
            background: rgba(45, 52, 54, 0.6);
            color: var(--light);
            border: 1px solid rgba(191, 158, 96, 0.3);
        }

        .btn-secondary:hover {
            background: rgba(45, 52, 54, 0.8);
            border-color: var(--primary);
            transform: translateY(-3px);
        }

        /* Footer */
        footer {
            background: rgba(22, 22, 22, 0.95);
            padding: 30px 5%;
            margin-top: auto;
            border-top: 1px solid rgba(191, 158, 96, 0.2);
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            gap: 40px;
        }

        .footer-section {
            flex: 1;
            min-width: 250px;
        }

        .footer-section h3 {
            color: var(--primary);
            margin-bottom: 20px;
            font-size: 1.3rem;
        }

        .footer-links {
            list-style: none;
        }

        .footer-links li {
            margin-bottom: 12px;
        }

        .footer-links a {
            color: var(--light);
            text-decoration: none;
            transition: color 0.3s;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .footer-links a:hover {
            color: var(--primary);
        }

        .footer-links i {
            width: 20px;
            text-align: center;
        }

        .copyright {
            text-align: center;
            padding-top: 30px;
            margin-top: 30px;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            color: rgba(255, 255, 255, 0.6);
            font-size: 0.9rem;
        }

        /* Animation for stars */
        .stars {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1;
            pointer-events: none;
        }

        .star {
            position: absolute;
            background: white;
            border-radius: 50%;
            animation: twinkle var(--duration) infinite ease-in-out;
            opacity: 0;
        }

        @keyframes twinkle {
            0% {
                opacity: 0;
            }

            50% {
                opacity: 1;
            }

            100% {
                opacity: 0;
            }
        }

        /* Planet animation */
        .planet {
            position: absolute;
            border-radius: 50%;
            z-index: 1;
        }

        .planet-1 {
            width: 300px;
            height: 300px;
            top: 10%;
            left: 10%;
            background: radial-gradient(circle at 30% 30%, var(--primary), transparent);
            box-shadow: 0 0 80px rgba(191, 158, 96, 0.2);
            animation: orbit 40s infinite linear;
        }

        .planet-2 {
            width: 120px;
            height: 120px;
            bottom: 15%;
            right: 15%;
            background: radial-gradient(circle at 30% 30%, var(--secondary), transparent);
            box-shadow: 0 0 60px rgba(0, 206, 201, 0.2);
            animation: orbit-reverse 35s infinite linear;
        }

        @keyframes orbit {
            0% {
                transform: rotate(0deg) translateX(200px) rotate(0deg);
            }

            100% {
                transform: rotate(360deg) translateX(200px) rotate(-360deg);
            }
        }

        @keyframes orbit-reverse {
            0% {
                transform: rotate(0deg) translateX(150px) rotate(0deg);
            }

            100% {
                transform: rotate(-360deg) translateX(150px) rotate(360deg);
            }
        }

        /* Comet animation */
        .comet {
            position: absolute;
            width: 10px;
            height: 10px;
            background: linear-gradient(to right, transparent, var(--primary));
            border-radius: 50% 0 0 50%;
            z-index: 1;
            opacity: 0.8;
            filter: blur(1px);
            animation: comet 20s infinite linear;
        }

        @keyframes comet {
            0% {
                transform: translate(-100px, -100px);
                opacity: 0;
            }

            10% {
                opacity: 1;
            }

            100% {
                transform: translate(100vw, 100vh);
                opacity: 0;
            }
        }

        /* Astronaut SVG styles */
        .astronaut-helmet {
            fill: #d1d1d1;
        }

        .astronaut-suit {
            fill: #f0f0f0;
        }

        .astronaut-visor {
            fill: var(--secondary);
            opacity: 0.7;
        }

        .astronaut-light {
            fill: var(--warning);
        }

        .astronaut-patch {
            fill: var(--primary);
        }

        /* Responsive design */
        @media (max-width: 768px) {
            .error-code {
                font-size: 7rem;
            }
            .logo h1{
                font-size: 1.4rem;
            }

            .logo-icon {
                font-size: 1.6rem;
            }
            .error-title {
                font-size: 2rem;
            }

            .error-message {
                font-size: 1.1rem;
            }

            .action-buttons {
                flex-direction: column;
                width: 100%;
                max-width: 300px;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }

            .search-box {
                flex-direction: column;
                background: transparent;
                border: none;
                padding: 0;
            }

            .search-input {
                border-radius: 50px;
                margin-bottom: 15px;
                border: 1px solid rgba(191, 158, 96, 0.3);
            }

            .search-btn {
                border-radius: 50px;
                padding: 16px;
            }

            .planet-1,
            .planet-2 {
                display: none;
            }
        }
    </style>
</head>

<body>
    <!-- Header -->
    <header>
        <div class="logo">
            <i class="ph ph-finn-the-human logo-icon"></i>
            <h1>NextScrimz</h1>
        </div>
    </header>

    <!-- Animated Background Elements -->
    <div class="stars" id="stars"></div>
    <div class="planet planet-1"></div>
    <div class="planet planet-2"></div>
    <div class="comet" style="top: 15%; left: 5%; animation-delay: 0s;"></div>
    <div class="comet" style="top: 40%; left: 20%; animation-delay: 5s; animation-duration: 25s;"></div>
    <div class="comet" style="top: 70%; left: 10%; animation-delay: 12s; animation-duration: 22s;"></div>

    <!-- Main Content -->
    <div class="container">
        <div class="astronaut-container">
            <svg class="astronaut" viewBox="0 0 200 200">
                <!-- Astronaut body -->
                <circle cx="100" cy="100" r="40" class="astronaut-helmet" />
                <circle cx="100" cy="140" r="30" class="astronaut-suit" />
                <rect x="85" y="140" width="30" height="50" class="astronaut-suit" />

                <!-- Visor -->
                <path d="M 80 90 Q 100 110 120 90" stroke-width="8" stroke="var(--secondary)" fill="none" />
                <ellipse cx="100" cy="90" rx="20" ry="10" class="astronaut-visor" />

                <!-- Light -->
                <circle cx="100" cy="170" r="5" class="astronaut-light" />

                <!-- Details -->
                <circle cx="120" cy="100" r="3" fill="#333" />
                <circle cx="90" cy="125" r="5" class="astronaut-patch" />

                <!-- Arms -->
                <line x1="70" y1="130" x2="50" y2="110" stroke-width="8" stroke="var(--primary)" />
                <line x1="130" y1="130" x2="150" y2="110" stroke-width="8" stroke="var(--primary)" />
            </svg>
        </div>

        <div class="error-code">404</div>
        <h1 class="error-title">Page Not Found</h1>
        <p class="error-message">
            The page you're looking for has drifted off into the cosmos.
            <span class="highlight">Don't worry, we'll help you navigate back</span> to familiar territory.
        </p>

        <div class="search-box">
            <input type="text" class="search-input" placeholder="Search our galaxy of content...">
            <button class="search-btn">
                <i class="fas fa-search"></i> Search
            </button>
        </div>

        <div class="action-buttons">
            <a href="/" class="btn btn-primary">
                <i class="fas fa-rocket"></i> Launch to Home
            </a>
            <a href="/games" class="btn btn-secondary">
                <i class="fas fa-globe"></i> Explore Tournaments
            </a>
            <a href="/contact" class="btn btn-secondary">
                <i class="fas fa-headset"></i> Contact Support
            </a>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <div class="footer-content">
            <div class="footer-section">
                <h3>NEXTSCRIMZ</h3>
                <p>Professional esports platform for competitive gamers. Join tournaments, track stats, and compete with
                    the best.</p>
            </div>
            <div class="footer-section">
                <h3>Quick Links</h3>
                <ul class="footer-links">
                    <li><a href="/games"><i class="fas fa-home"></i> Games</a></li>
                    <li><a href="/leaderboard"><i class="fas fa-trophy"></i> Leaderboard</a></li>
                    <li><a href="/history"><i class="fas fa-history"></i> History</a></li>
                    <li><a href="/profile"><i class="fas fa-user"></i> Profile</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>Support</h3>
                <ul class="footer-links">
                    <li><a href="/contact"><i class="fas fa-headset"></i> Contact Us</a></li>
                    <li><a href="/help"><i class="fas fa-question-circle"></i> Help Center</a></li>
                    <li><a href="/report"><i class="fas fa-bug"></i> Report Issue</a></li>
                    <li><a href="/"><i class="fas fa-file-alt"></i> Status Page</a></li>
                </ul>
            </div>
        </div>
        <div class="copyright">
            &copy; 2025 NextScrimz. All rights reserved. Explore the competitive gaming universe with us.
        </div>
    </footer>

    <script>
        // Create background stars
        function createStars() {
            const starsContainer = document.getElementById('stars');
            const starCount = 200;

            for (let i = 0; i < starCount; i++) {
                const star = document.createElement('div');
                star.classList.add('star');

                // Random position
                const posX = Math.random() * 100;
                const posY = Math.random() * 100;
                star.style.left = `${posX}%`;
                star.style.top = `${posY}%`;

                // Random size
                const size = Math.random() * 3 + 1;
                star.style.width = `${size}px`;
                star.style.height = `${size}px`;

                // Random animation duration
                const duration = Math.random() * 5 + 3;
                star.style.setProperty('--duration', `${duration}s`);

                // Random delay
                const delay = Math.random() * 5;
                star.style.animationDelay = `${delay}s`;

                starsContainer.appendChild(star);
            }
        }

        // Initialize stars
        createStars();

        // Add search functionality
        document.querySelector('.search-btn').addEventListener('click', function () {
            const searchTerm = document.querySelector('.search-input').value;
            if (searchTerm.trim() !== '') {
                alert(`Searching for: ${searchTerm}`);
            } else {
                alert('Please enter a search term');
            }
        });

        // Add animation to buttons on hover
        document.querySelectorAll('.btn').forEach(btn => {
            btn.addEventListener('mouseenter', function () {
                this.style.transform = 'translateY(-5px)';
            });

            btn.addEventListener('mouseleave', function () {
                this.style.transform = 'translateY(0)';
            });
        });
    </script>
</body>

</html>